<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.oscar.escuelaapp.RegistrarMateriaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Calificacion"
        android:textSize="25sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_margin="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_margin="10dp"
        />

    <Spinner
        android:id="@+id/spNombreAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Materia"
        android:textColor="#000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spMaterias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificacion"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/edtRegistrarCalificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calificacion"
        android:gravity="center"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        />

    <Button
        android:id="@+id/btnRegistrarCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Registrar"
        android:layout_margin="10dp"
        />

</LinearLayout>